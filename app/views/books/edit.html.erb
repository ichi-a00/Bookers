<p id="notice"><%= flash[:notice] %></p>

<h1>Editing Book</h1>
  <% if @book.errors.any? %>
  <h3><%= @book.errors.count %> errors prohibited this book from being saved:</3>
  <ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  <%= form_with model:@book, local:true do |b| %>
  <h4>Title</h4>
  <%= b.text_field :title %>
  <h4>Body</h4>
  <%= b.text_area :body %>

  <%= b.submit "Update Book" %>

<% end %>

<%= link_to "Show", book_path(@book) %>
