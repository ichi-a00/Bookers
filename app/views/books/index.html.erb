<h1>Books</h1>
<!--% binding.pry %>-->

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <% @books.each do |book| %>

      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
      </tr>
      <% end %>
  </tbody>
</table>


<h2>New book</h2>
  <% if @book.errors.any? %>
  <h3><%= @book.errors.count %> errors prohibited this book from being saved:</3>
  <ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

<!-- form_with部分 -->
  <%= form_with model:@book, local:true do |b| %>
  <h4>Title</h4>
  <%= b.text_field :title %>
  <h4>Body</h4>
  <%= b.text_area :body %>

  <%= b.submit "Create Book" %>

<% end %>
